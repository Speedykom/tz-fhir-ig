{
    "resourceType": "StructureDefinition",
    "id": "tz-claim",
    "url": "http://moh.tz/fhir/StructureDefinition/tz-claim",
    "name": "TzClaim",
    "title": "Tanzania Claim Profile",
    "status": "active",
    "version": "0.1.0",
    "date": "2025-01-01",
    "publisher": "Ministry of Health – Tanzania",
    "description": "Minimal Claim profile for NHIF–ZHSF claim submissions.",
    "fhirVersion": "5.0.0",
    "kind": "resource",
    "abstract": false,
    "type": "Claim",
    "baseDefinition": "http://hl7.org/fhir/StructureDefinition/Claim",
    "derivation": "constraint",
    "differential": {
        "element": [
            {
                "id": "Claim",
                "path": "Claim"
            },
            {
                "id": "Claim.identifier",
                "path": "Claim.identifier",
                "min": 1,
                "max": "1",
                "mustSupport": true,
                "short": "ClaimNo from ClaimDetails",
                "comment": "Maps ClaimDetails.ClaimNo"
            },
            {
                "id": "Claim.patient",
                "path": "Claim.patient",
                "min": 0,
                "max": "1",
                "mustSupport": true,
                "short": "Link to the patient (by identifier/cardNo)."
            },
            {
                "id": "Claim.insurer",
                "path": "Claim.insurer",
                "min": 0,
                "max": "1",
                "mustSupport": true,
                "short": "ZHSF as insurer."
            },
            {
                "id": "Claim.facility",
                "path": "Claim.facility",
                "min": 0,
                "max": "1",
                "mustSupport": true,
                "short": "FacilityCode from ClaimDetails/PaymentBatches."
            },
            {
                "id": "Claim.created",
                "path": "Claim.created",
                "min": 0,
                "max": "1",
                "mustSupport": true,
                "short": "SubmissionDate / DatePrepared."
            },
            {
                "id": "Claim.total",
                "path": "Claim.total",
                "min": 0,
                "max": "1",
                "mustSupport": true,
                "short": "TotalAmountClaimed / AmountClaimed."
            }
        ]
    }
}